<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="reply">

<select id="readReply" resultType="replyVo">
	SELECT
		RNO,
		CONTENT,
		WRITER,
		REGDATE
	FROM
		DH_REPLY
	WHERE BNO=${bno}
</select>
	

</mapper>